{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MaterialConfigMap",
  "type": "object",
  "patternProperties": {
    "^[^\\s]+$": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the material."
          },
          "applies": {
            "type": "object",
            "description": "A map of string keys to string values indicating where the material applies.",
            "additionalProperties": {
              "type": "string"
            }
          },
          "isHidden": {
            "type": "boolean",
            "description": "Whether the material is hidden."
          },
          "modifyName": {
            "type": "boolean",
            "description": "Whether to modify the name of the material.",
            "default": true
          },
          "layer": {
            "type": "integer",
            "description": "The layer of the material.",
            "minimum": 0,
            "maximum": 255,
            "default": 0
          }
        },
        "required": ["name", "applies", "isHidden"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
